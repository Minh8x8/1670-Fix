@model List<Category>

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Category List</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pb-3">
        </div>

        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        Category Name
                    </th>
                    <th>
                        Display Order
                    </th>
                    <th>Status</th>
                    <th>    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model.OrderBy(u => u.DisplayOrder))
                {
                        <tr>
                            <td>@obj.Name</td>
                            <td>
                                @obj.DisplayOrder
                            </td>
                            <td>
                                @obj.Status
                            </td>
                            <td>
                            @if(obj.Status == "Pending")
                            {
                                <div class="btn-group" role="group" style="width: 100%;">
                                    <a asp-controller="CategoryRequest" asp-action="Approval" asp-route-id="@obj.Id" class="btn btn-outline-primary" style="width: 50%;">
                                        <i class="bi bi-pencil-square"></i> Approval
                                    </a>
                                </div>
                            }
                            </td>
                        </tr>
                }
            </tbody>
        </table>

    </div>
</div>
